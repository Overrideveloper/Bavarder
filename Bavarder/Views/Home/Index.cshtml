@using Bavarder.Models
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Profile";
    var db = new ApplicationDbContext();
    var uid = User.Identity.GetUserId();
    var user = db.Users.Find(uid);
}

<hr class="">
<div class="container target">
    <div class="row">
        <div class="col-sm-10">
            <h1 class="">@User.Identity.Name</h1>

            <button type="button" class="btn btn-info">Send a message</button>
            <br>
        </div>
        <div class="col-sm-2">
            <a href="/users" class="pull-right"><img title="profile image" class="img-circle img-responsive" src="@Url.Action("UserPhoto", "Home")"></a>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-sm-3">
            <!--left col-->
            <ul class="list-group">
                <li class="list-group-item text-capitalize" contenteditable="false">Profile</li>
                <li class="list-group-item text-right"><span class="pull-left"><strong class="">Joined</strong></span> 2.13.2014</li>
                <li class="list-group-item text-right"><span class="pull-left"><strong class="">Last seen</strong></span> Yesterday</li>
                <li class="list-group-item text-right">
                    <span class="pull-left"><strong class="">Real name</strong></span>
                    @if (user.MidName != null) { <b>@user.Surname @user.MidName @user.FirstName</b>}
                    else { <b>@user.Surname @user.FirstName</b> }
                </li>
                <li class="list-group-item text-right">
                    <span class="pull-left"><strong class="">Gender: </strong></span> @user.Gender
                </li>
                <li class="list-group-item text-right">
                    <span class="pull-left"><strong class="">Location: </strong></span> @user.Country
                </li>

                <li class="list-group-item text-right">
                    <span class="pull-left"><strong class="">Relationship: </strong></span> 
                    @switch (user.Relationship)
                    {
                        case Bavarder.Enums.Relationship.Engaged:
                            <b>Engaged</b>
                            break;
                        case Bavarder.Enums.Relationship.InARelationship:
                            <b>In a relationship</b>
                            break;
                        case Bavarder.Enums.Relationship.ItsComplicated:
                            <b>It's complicated</b>  
                            break;
                        case Bavarder.Enums.Relationship.Married:
                            <b>Married</b>
                            break;
                        case Bavarder.Enums.Relationship.Single:
                            <b>Single</b>
                            break;        
